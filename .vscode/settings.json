{
  // Auto guardado
  "files.autoSave": "afterDelay",
  // Configuracion Editor
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  // "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.autoIndent": "full",
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "diffEditor.ignoreTrimWhitespace": false,
  // Varios
  "prettier.bracketSpacing": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "editor.showUnused": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#684259",
    "activityBar.background": "#684259",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#758857",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#684259",
    "statusBar.background": "#492e3e",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#684259",
    "statusBarItem.remoteBackground": "#492e3e",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#492e3e",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#492e3e99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#492e3e",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.defaultInterpreterPath": ".\\Scripts\\python.exe"
}