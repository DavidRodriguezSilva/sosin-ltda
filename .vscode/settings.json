{
  // Auto guardado
  // "files.autoSave": "afterDelay",
  // Configuracion Editor
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.autoIndent": "full",
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "diffEditor.ignoreTrimWhitespace": true,
  // Error lens
  "errorLens.codeLensTemplate": "$severity $message $source",
  // React
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // PeackColor
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#684259",
    "activityBar.background": "#684259",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#758857",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#684259",
    "statusBar.background": "#492e3e",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#684259",
    "statusBarItem.remoteBackground": "#492e3e",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#492e3e",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#492e3e99",
    "titleBar.inactiveForeground": "#e7e7e799",
    "editorUnnecessaryCode.border": "#ff0000"
  },
  "peacock.color": "#492e3e",
  // Diccionario
  "typescript.validate.enable": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  // Varios
  "prettier.bracketSpacing": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "editor.showUnused": true,
  "sonarlint.output.showVerboseLogs": true,
  "sonarlint.output.showAnalyzerLogs": true,
  "sonarlint.trace.server": "off",
  "sonarlint.disableTelemetry": true,
  "sonarlint.connectedMode.project": {
    "connectionId": "David-Rodriguez",
    "projectKey": "cesionbnk-front-main"
  },
  // Prettier
  "prettier.printWidth": 160,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.semi": false,
  "prettier.proseWrap": "preserve",
  "prettier.useTabs": false,
  "prettier.quoteProps": "as-needed",
  "prettier.htmlWhitespaceSensitivity": "css"
}
